@{
    ViewBag.Title = "Algoritmo";
}

<h2>Algoritmo</h2>


@using (Html.BeginForm("Alg","Timbox"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Introduce una palabra y te diré si es palíndroma", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("resp")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Respuesta" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @ViewBag.Message
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "../Home/Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
